#!/usr/bin/env perl
use 5.12.0;
use Git::Release;

my $manager = Git::Release->new;
$|++;

my $branch = shift;
my $ref = shift;
exit unless $branch;



my $b = $manager->create_feature_branch( $branch , $ref );
$b->checkout();

say "Pushing @{[ $b->name ]} to remote: ";
$b->push_to_remotes;

say 'Done';
